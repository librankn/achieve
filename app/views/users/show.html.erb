<h1><%= @user.name %>のページ</h1>

<p>メールアドレス: <%= @user.email %></p>

  <% @favorites_records.each do |favorite_record| %>
    <tr class="col-xs-12 col-md-6">
      <td><%= favorite_record.title %></td>
      <td><%= favorite_record.content %></td>
