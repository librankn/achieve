<h1>ブログ一覧</h1>

<%= link_to '新しくブログを投稿する', new_record_path , class: 'btn btn-default'  %>

<div class="container">
  <p>タイトル  内容  投稿者</p>

<table>
  <div class ="row">
    <% @records.each do |record| %>
      <tr class="col-xs-12 col-md-6">
        <td width="50"><%= record.title %></td>
        <td width="50"><%= record.content %></td>
        <td width="50"><%= record.user.name %></td>
        <td><%= link_to '詳細を確認する', record_path(record.id) %></td>
        <% if record.user_id == current_user.id %>
          <td><%= link_to "ブログを編集する", edit_record_path(record.id) %></td>
          <td><%= link_to 'ブログを削除する', record_path(record.id), method: :delete , data: { confirm: '本当に編集していいですか？' } %></td>
        <% end %>
      </tr>
    <% end %>
  </div>
</table>
</div>