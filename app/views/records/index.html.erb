<h1>ブログ一覧</h1>

<%= link_to '新しくブログを投稿する', new_record_path %>

<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
  </tr>

<% @records.each do |record| %>
  <tr>
    <td><%= record.title %></td>
    <td><%= record.content %></td>
    <td><%= link_to '詳細を確認する', record_path(record.id) %></td>
    <td><%= link_to "ブログを編集する", edit_record_path(record.id) %></td>
    <td><%= link_to 'ブログを削除する', record_path(record.id), method: :delete , data: { confirm: '本当に編集していいですか？' } %></td>
  </tr>
  </tr>
<% end %>
</table>