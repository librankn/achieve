<h1>ブログ詳細画面</h1>
<p>タイトル: <%= @record.title %></p>
<p>内容: <%= @record.content %></p>
<p>投稿者: <%= @user.name %></p>
<p>
  <strong>Image:</strong>
  <%= image_tag if @record.image.url %>
</p>

<% unless @record.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(record_id: @record.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>